<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/carousel_message_relative_layout">
    <RelativeLayout
        android:id="@+id/body_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">
        <LinearLayout
            android:id="@+id/carousel_linear_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">
            <com.clevertap.android.sdk.CTCarouselViewPager
                android:id="@+id/image_carousel_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/sliderDots"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="34dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="end|right">
                    <TextView
                        android:id="@+id/carousel_timestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginRight="5dp"
                        android:text="timestamp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginEnd="5dp" />
                    <ImageView
                        android:id="@+id/carousel_read_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/read_circle"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/messageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="Title"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/carousel_linear_layout"/>
        <TextView
            android:id="@+id/messageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message"
            android:maxLines="3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:textColor="@android:color/darker_gray"
            android:layout_below="@+id/messageTitle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/messageText"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="end">
            <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginRight="5dp"
                android:text="timestamp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginEnd="5dp" />
            <ImageView
                android:id="@+id/read_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/read_circle"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/cta_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/body_relative_layout"
        android:orientation="horizontal"
        android:weightSum="6"
        android:background="@android:color/white">
        <Button
            android:id="@+id/cta_button_1"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:padding="2dp"
            android:text="CTA1"
            android:textColor="@android:color/holo_blue_light"
            android:visibility="visible"
            android:background="@android:color/white"/>
        <Button
            android:id="@+id/cta_button_2"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:padding="2dp"
            android:visibility="visible"
            android:text="CTA2"
            android:textColor="@android:color/holo_blue_light"
            android:background="@android:color/white"/>
        <Button
            android:id="@+id/cta_button_3"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:padding="2dp"
            android:visibility="visible"
            android:text="CTA3"
            android:textColor="@android:color/holo_blue_light"
            android:background="@android:color/white"/>
    </LinearLayout>
</RelativeLayout>